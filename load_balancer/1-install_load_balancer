#!/usr/bin/env bash
# Script that installs and configures HAProxy as a load balancer

# Update and install HAProxy
apt-get update -y
apt-get install -y haproxy

# Enable HAProxy to be started by init script
echo "ENABLED=1" > /etc/default/haproxy

# Configure HAProxy with round-robin load balancing
cat << 'HAPROXY_CONFIG' | tee /etc/haproxy/haproxy.cfg > /dev/null
global
    log /dev/log local0
    log /dev/log local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log global
    mode http
    option httplog
    option dontlognull
    timeout connect 5000
    timeout client 50000
    timeout server 50000

frontend http_front
    bind *:80
    default_backend http_back

backend http_back
    balance roundrobin
    server 6830-web-01 52.87.245.215:80 check
    server 6830-web-02 WEB-02-IP:80 check
HAPROXY_CONFIG

# Restart HAProxy
service haproxy restart