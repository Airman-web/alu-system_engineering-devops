#!/usr/bin/env bash
# Script that configures Nginx with a 301 redirect from /redirect_me to another page

# Update package list
apt-get update -y

# Install Nginx
apt-get install -y nginx

# Create index.html with "Holberton School"
echo "Holberton School" > /var/www/html/index.html

# Configure redirect in Nginx default site
# Add a 301 redirect for /redirect_me to YouTube video
sed -i '/server_name _;/a \\n\tlocation /redirect_me {\n\t\treturn 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n\t}' /etc/nginx/sites-available/default

# Restart Nginx to apply changes
service nginx restart