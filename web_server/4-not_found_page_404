#!/usr/bin/env bash
# Script that configures Nginx with a custom 404 page and 301 redirect

# Update package list
apt-get update -y

# Install Nginx
apt-get install -y nginx

# Create index.html with "Holberton School"
echo "Holberton School" > /var/www/html/index.html

# Create custom 404 error page
echo "Ceci n'est pas une page" > /var/www/html/404.html

# Configure redirect for /redirect_me
sed -i '/server_name _;/a \\n\tlocation /redirect_me {\n\t\treturn 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n\t}' /etc/nginx/sites-available/default

# Configure custom 404 error page
sed -i '/server_name _;/a \\n\terror_page 404 /404.html;\n\tlocation = /404.html {\n\t\tinternal;\n\t}' /etc/nginx/sites-available/default

# Restart Nginx to apply changes
service nginx restart