#!/usr/bin/env bash
# Install Nginx and ensure it listens on port 80 on all IPv4 interfaces

set -e

# Non-interactive install
export DEBIAN_FRONTEND=noninteractive
apt-get update
apt-get install -y nginx

# Make sure Nginx listens on all IPv4 addresses
# Add an IPv6 listen line after the IPv4 listen line only if it's not already present
if ! grep -q "listen [::]:80 default_server;" /etc/nginx/sites-available/default; then
  sed -i '/listen 80 default_server;/a listen [::]:80 default_server;' /etc/nginx/sites-available/default
fi

# Ensure the web root exists and default page is present
mkdir -p /var/www/html
echo "Welcome to nginx!" > /var/www/html/index.html

# Start Nginx
service nginx restart
